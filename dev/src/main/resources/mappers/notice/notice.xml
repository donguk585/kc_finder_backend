<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  	<mapper namespace="com.kcFinder.dev.domain.notice.NoticeRepository">
  	
    <select id="getNoticeList" resultType="com.kcFinder.dev.web.dto.notice.NoticeDto">
        SELECT 
            notice_id,
            title,
            create_date
        FROM notice
        ORDER BY notice_id DESC
        LIMIT #{size} OFFSET #{offset}
    </select>

    <!-- 전체 공지사항 수 조회 -->
    <select id="getTotalNoticeCount" resultType="int">
        SELECT COUNT(*)
        FROM notice
    </select>
  	
    <!-- 공지사항 상세 조회 -->
    <select id="getNoticeDetail" resultType="com.kcFinder.dev.web.dto.notice.NoticeDto">
        SELECT 
            notice_id,
            title,
            contents,
            create_date
        FROM notice
        WHERE notice_id = #{noticeId}
    </select>
  	
    </mapper>