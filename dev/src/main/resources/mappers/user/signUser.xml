<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  	<mapper namespace="com.kcFinder.dev.domain.user.SignUserRepository">
  	
  	<insert id="saveSignupUser" parameterType="com.kcFinder.dev.domain.user.User"
  	useGeneratedKeys="true" keyProperty="user_code">
  	insert into
		user_mst(
			user_code,
			user_id,
			user_pw,
			user_email,
			user_phone,
			create_date,
			update_date
		)
	values(
		0,
		#{user_id},
		#{user_pw},
		#{user_email},
		#{user_phone},
		now(),
		now()
		);
		
  	</insert>
  	
  	<select id="findUserByUserId" parameterType="String" resultType="com.kcFinder.dev.domain.user.User">
  	select
		*
	from
		user_mst
	where
		user_id = #{user_id};	
  	</select>
  	
  	
    <!-- 아이디 중복 확인 -->
    <select id="countByUserId" resultType="int">
        SELECT COUNT(*)
        FROM user_mst
        WHERE user_id = #{userId}
    </select>
  	
  	
  	
  	
  	
  	
  	
  	
    </mapper>